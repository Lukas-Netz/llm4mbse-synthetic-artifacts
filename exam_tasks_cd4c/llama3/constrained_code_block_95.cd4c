



classdiagram VoiceCommerce  {

  class User  {
    String uniqueIdentifier;
    Profile profile;
  }

  class Profile  {
    String name;
    String email;
    String password;
  }

  class Product  {
    String uniqueIdentifier;
    String name;
    String description;
    double price;
  }

  class Order  {
    User user;
    List<Product> products;
    OrderState state;
  }

  enum OrderState  {
    Pending,
    Shipped,
    Cancelled
  ;}

  class Payment  {
    Order order;
    PaymentMethod method;
    double amount;
  }

  enum PaymentMethod  {
    CreditCard,
    PayPal
  ;}

  class VoiceAssistant  {
    List<Device> devices;
  }

  class Device  {
    VoiceAssistant assistant;
  }

  composition User -> Profile;
  composition Product -> none;
  composition Order -> User;
  composition Payment -> Order;
  composition VoiceAssistant -> Device;
}