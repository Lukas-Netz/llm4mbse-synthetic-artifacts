



classdiagram DonationPlatform  {

  class Charity  {
    String name;
    String description;
    String uniqueIdentifier;
  }

  class DonationCampaign  {
    String name;
    String description;
    int targetAmount;
    Charity charity;
  }

  class Donor  {
    String name;
    String email;
    String password;
  }

  class Donation  {
    int amount;
    Charity charity;
    DonationCampaign campaign;
    Donor donor;
  }

  class DonationReceipt  {
    Donation donation;
    String receiptText;
  }

  class DonationNotification  {
    Charity charity;
    Donation donation;
  }

  composition Charity -> DonationCampaign [*];
  composition Donor -> Donation [*];
  composition Donation -> Charity;
  composition Donation -> DonationCampaign;
  composition Donation -> Donor;
  composition DonationReceipt -> Donation;
  composition DonationNotification -> Charity;
  composition DonationNotification -> Donation;
}