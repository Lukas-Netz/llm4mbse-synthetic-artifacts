



classdiagram BuildingManagementSystem  {

  class Building  {
    String uniqueIdentifier;
    String name;
    -> Floor[*];
  }

  class Floor  {
    String uniqueIdentifier;
    String name;
    -> Room[*];
  }

  class Room  {
    String uniqueIdentifier;
    RoomType type;
    -> Device[*];
  }

  class Device  {
    String uniqueIdentifier;
    DeviceType type;
    DeviceStatus status;
  }

  enum RoomType  {
    Office, MeetingRoom, StorageRoom;
  }

  enum DeviceType  {
    Light, Temperature, Security;
  }

  enum DeviceStatus  {
    On, Off;
  }

  composition Building -> Floor[*];
  composition Floor -> Room[*];
  composition Room -> Device[*];
}

