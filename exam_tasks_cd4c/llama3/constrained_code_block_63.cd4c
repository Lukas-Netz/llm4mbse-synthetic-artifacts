



classdiagram ConversationalAI  {

  class UI  {
    void displayResponse(String response);
  }

  class NLP  {
    Map<String, String> extractInformation(String input);
  }

  class KnowledgeBase  {
    Map<String, Product> products;
    Map<String, Promotion> promotions;
    Map<String, StorePolicy> storePolicies;
  }

  class ResponseGenerator  {
    String generateResponse(Map<String, String> information);
  }

  class DialogueManager  {
    void manageConversation(NLP nlp, KnowledgeBase knowledgeBase, ResponseGenerator responseGenerator);
  }

  class Product  {
    String name;
    String description;
    double price;
    int availability;
  }

  class Promotion  {
    String name;
    String description;
    double discount;
  }

  class StorePolicy  {
    String name;
    String description;
  }

  composition UI -> (has) NLP;
  composition NLP -> (uses) KnowledgeBase;
  composition KnowledgeBase -> (contains) Product;
  composition KnowledgeBase -> (contains) Promotion;
  composition KnowledgeBase -> (contains) StorePolicy;
  composition ResponseGenerator -> (uses) KnowledgeBase;
  composition DialogueManager -> (uses) NLP;
  composition DialogueManager -> (uses) ResponseGenerator;
}