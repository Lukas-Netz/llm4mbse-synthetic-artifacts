



classdiagram EnvironmentalPlatform  {

  class Campaign  {
    String uniqueIdentifier;
    String name;
    String description;
    CampaignType type;
  }

  class Organization  {
    String uniqueIdentifier;
    String name;
    String description;
    OrganizationType type;
  }

  class User  {
    String uniqueIdentifier;
    String name;
    String email;
    Organization  organization;
  }

  class Action  {
    String uniqueIdentifier;
    String name;
    String description;
    ActionType type;
  }

  class CampaignActionRelationship  {
    String uniqueIdentifier;
    Campaign campaign;
    Action action;
  }

  class OrganizationCampaignRelationship  {
    String uniqueIdentifier;
    Organization organization;
    Campaign campaign;
  }

  enum CampaignType  {
    ClimateChange, Conservation, Sustainability;
  }

  enum OrganizationType  {
    NonProfit, Government, CommunityBased;
  }

  enum ActionType  {
    Petition, Donation, Volunteering;
  }

  composition Campaign  ->  (has) CampaignActionRelationship[*];
  composition Organization  ->  (has) OrganizationCampaignRelationship[*];
  composition User  ->  (has) Organization;
  composition Action  ->  (has) CampaignActionRelationship[*];
}
