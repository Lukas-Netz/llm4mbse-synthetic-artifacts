



classdiagram CollaborationSystem  {

  class Project  {
    String name;
    String description;
    List<Task> tasks;
  }

  class Task  {
    String name;
    String description;
    Date dueDate;
    List<User> assignedUsers;
    List<Comment> comments;
    File file;
    TaskStatus status;
  }

  class User  {
    String uniqueIdentifier;
    Role role;
    List<Project> assignedProjects;
  }

  enum Role  {
    ProjectManager,
    TeamMember,
    Observer
  ;}

  enum TaskStatus  {
    NotStarted,
    InProgress,
    Completed,
    Overdue
  ;}

  class Comment  {
    String text;
    User author;
  }

  class File  {
    String name;
    byte[] content;
  }

  composition Project -> (has) Task[*];
  composition Task -> (has) User[*];
  composition User -> (has) Project[*];
  composition Task -> (has) Comment[*];
  composition Task -> (has) File [0..1];
  composition Project -> (has) User [1..*];
  composition User -> (has) Role [1];
}