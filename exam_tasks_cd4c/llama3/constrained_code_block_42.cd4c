



classdiagram VirtualAssistant  {

  class VirtualAssistant  {
    UserInterface ui;
    NLPModule nlp;
    TaskManagementModule taskManager;
    DeviceControlModule deviceController;
    DataStorageModule dataStorage;
    IntegrationModule integration;
  }

  class UserInterface  {
    void displayOptions();
    void receiveInput(String input);
  }

  class NLPModule  {
    String parseInput(String input);
  }

  class TaskManagementModule  {
    void setReminder(String reminder);
    void sendSMS(String message);
    void makePhoneCall(String number);
  }

  class DeviceControlModule  {
    void turnOnLight();
    void turnOffLight();
    void setThermostatTemperature(int temperature);
  }

  class DataStorageModule  {
    void storeUserPreferences(User user);
    User getUserPreferences();
  }

  class IntegrationModule  {
    void integrateWithCalendar();
    void integrateWithEmail();
    void integrateWithSocialMedia();
  }

  class User  {
    String name;
    String email;
    String password;
  }

  class Device  {
    String deviceName;
    String deviceType;
  }

  composition VirtualAssistant -> (has) UserInterface;
  composition VirtualAssistant -> (has) NLPModule;
  composition VirtualAssistant -> (has) TaskManagementModule;
  composition VirtualAssistant -> (has) DeviceControlModule;
  composition VirtualAssistant -> (has) DataStorageModule;
  composition VirtualAssistant -> (has) IntegrationModule;
  composition TaskManagementModule -> (performs) Task;
  composition DeviceControlModule -> (controls) Device;
  composition DataStorageModule -> (stores) User;
  composition IntegrationModule -> (integrates) Application;
}