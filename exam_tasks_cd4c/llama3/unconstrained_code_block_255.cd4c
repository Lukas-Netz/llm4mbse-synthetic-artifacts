



classdiagram VirtualRealityFlightTrainingSystem  {

  class Simulator  {
    String name;
    SimulatorType type;
  }

  class FlightPlan  {
    String name;
    Location startLocation;
    Location endLocation;
    List<Waypoint> waypoints;
  }

  class Pilot  {
    String name;
    LicenseType licenseType;
    List<Skill> skills;
  }

  class ScoringMechanism  {
    PilotPerformance pilotPerformance;
  }

  class PilotPerformance  {
    double navigationScore;
    double communicationScore;
    double emergencyProcedureScore;
  }

  class Waypoint  {
    Location location;
  }

  class Location  {
    String name;
    double latitude;
    double longitude;
  }

  class Skill  {
    String name;
  }

  class SimulatorType  {
    String type;
  }

  class LicenseType  {
    String type;
  }

  composition Pilot -> FlightPlan [0..1];
  composition Simulator -> FlightPlan [0..1];
  composition ScoringMechanism -> PilotPerformance;
  composition PilotPerformance -> Pilot;
}

