



classdiagram MobileCommerce  {

  class Merchant  {
    Product[] products;
  }

  class Customer  {
    Account[] accounts;
  }

  class Account  {
    String uniqueIdentifier;
    String password;
  }

  class Product  {
    String uniqueIdentifier;
    double price;
  }

  class PaymentGateway  {
    PaymentMethod[] paymentMethods;
  }

  class PaymentMethod  {
    String name;
  }

  class Transaction  {
    Product product;
    Customer customer;
    PaymentMethod paymentMethod;
    TransactionStatus status;
  }

  enum TransactionStatus  {
    Pending, Successful, Failed;
  }

  class Review  {
    Product product;
    Customer customer;
    String rating;
    String comment;
  }

  composition Merchant  ->  (offers) Product[*];
  composition Customer  ->  (has) Account[*];
  composition PaymentGateway  ->  (uses) PaymentMethod[*];
  composition Transaction  ->  (involves) Product;
  composition Transaction  ->  (involves) Customer;
  composition Transaction  ->  (uses) PaymentMethod;
  composition Review  ->  (for) Product;
  composition Review  ->  (from) Customer;
}