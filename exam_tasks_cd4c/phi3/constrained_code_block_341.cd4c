
classdiagram VideoStreamingPlatform {

    class User {
      String uniqueId;
      UserProfile profile;
    }

    class UserProfile {
      String name;
      String email;
      String password;
    }

    class Channel {
      String name;
      String description;
      List<Video> videos;
    }

    class Video {
      String title;
      String description;
      List<String> tags;
      String fileFormat;
      Channel channel;
      User uploader;
      Rating rating;
    }

    class Rating {
      int score;
    }

    association User -> Channel [0..*];
    association User -> Video [0..*];
    association Channel -> Video [0..*];
    composition UserProfile -> User;
    composition Video -> Channel;
    composition Video -> User;
    composition Video -> Rating;
}