
classdiagram RoboticSurgeryTrainingSimulator {

    class Simulator {
      String name;
      int version;
      List<Scenario> scenarios;
    }

    class RoboticArm {
      String name;
      String type;
      List<Action> actions;
    }

    class Console {
      String name;
      String type;
      List<User> users;
    }

    class Scenario {
      String name;
      String description;
      List<Task> tasks;
    }

    class Task {
      String name;
      String description;
      List<Step> steps;
    }

    class Step {
      String name;
      String description;
    }

    class Action {
      String name;
      String description;
    }

    class User {
      String name;
      String role;
    }

    association Simulator -> Scenario [*];
    association RoboticArm -> Action [*];
    association Console -> User [*];
    association Scenario -> Task [*];
    association Task -> Step [*];
    composition Simulator -> Database;
    composition RoboticArm -> Database;
    composition Console -> Database;
    composition Scenario -> Database;
    composition Task -> Database;
    composition Step -> Database;
    composition User -> Database;
}