
classdiagram SmartHomeForElderly {

    class SmartHomeForElderly {
      Robot robot;
      Caregiver caregiver;
      ChargingStation chargingStation;
    }

    class Robot {
      String name;
      String uniqueIdentifier;
      int batteryLevel;
      void clean();
      void cook();
      void remindMedication();
      void recharge(ChargingStation chargingStation);
      void interactWithDevice(Device device);
      void learnHabits();
    }

    class Caregiver {
      void monitorRobot();
      void receiveNotifications();
    }

    class ChargingStation {
      int capacityWh;
      void providePower(Robot robot);
    }

    class Device {
      void interactWithRobot(Robot robot);
    }

    association SmartHomeForElderly -> [has] Robot;
    association SmartHomeForElderly -> [has] Caregiver;
    association SmartHomeForElderly -> [has] ChargingStation;
    association Robot -> [uses] Device;
}