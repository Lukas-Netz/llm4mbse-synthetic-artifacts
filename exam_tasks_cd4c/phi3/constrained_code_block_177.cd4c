
classdiagram AutomatedCustomerSupportSystem {

    class KnowledgeBase {
      Product product;
      Service service;
      String productName;
      String description;
      double price;
    }

    class Customer {
      String name;
      String email;
      String phoneNumber;
      InteractionHistory history;
    }

    class InteractionHistory {
      String inquiry;
      String response;
      DateTime timestamp;
    }

    class NLPModule {
      String analyzeInquiry(String inquiry);
    }

    class Chatbot {
      String interactWithCustomer(String inquiry);
    }

    class Database {
      Customer customer;
      InteractionHistory history;
      void storeCustomerInfo(Customer customer);
      void retrieveCustomerInfo(String email);
    }

    association Customer -> Database;
    association Customer -> InteractionHistory;
    composition Chatbot -> KnowledgeBase;
    composition Chatbot -> NLPModule;
    composition Chatbot -> Customer;
    composition Chatbot -> InteractionHistory;
    composition Chatbot -> Database;
    composition KnowledgeBase -> NLPModule;
    composition KnowledgeBase -> Chatbot;
    composition KnowledgeBase -> Database;
}