
classdiagram MobileBankingPlatform {

    class User {
      String uniqueIdentifier;
      String password;
      List<Account> accounts;
    }

    class Account {
      String uniqueIdentifier;
      double balance;
      String type;
      List<Transaction> transactions;
      Card card;
    }

    class Transaction {
      String uniqueIdentifier;
      Date date;
      double amount;
      TransactionType type;
    }

    class Card {
      String uniqueIdentifier;
      String cardNumber;
      CardType type;
      Account account;
    }

    class Notification {
      String message;
      Account account;
    }

    enum TransactionType {
      Deposit, Withdrawal, Transfer
   
   
   ;}

    enum CardType {
      Credit, Debit
   
   
   ;}

    enum AccountType {
      Checking, Savings, Credit
   
   
   ;}

    association User - has -> List<<Account>>;
    association Account - has -> List<<Transaction>>;
    association Account - has -> Card;
    association Account - has -> List<<Notification>>;
}