
classdiagram SmartHospitalSystem {

    class Department {
      String name;
      String uniqueIdentifier;
      List<Room> rooms;
    }

    class Room {
      String name;
      String uniqueIdentifier;
      List<Device> devices;
      Patient patient;
    }

    class Device {
      String name;
      String uniqueIdentifier;
      boolean isFunctioning;
    }

    class Patient {
      String name;
      int age;
      MedicalRecord medicalRecord;
      Room room;
    }

    class MedicalRecord {
      List<VitalSign> vitalSigns;
      List<TestResult> testResults;
    }

    class VitalSign {
      String name;
      double value;
    }

    class TestResult {
      String name;
      String result;
    }

    class MedicalStaff {
      String name;
      String role;
      String qualifications;
      Department department;
      Schedule schedule;
      PatientAssignment patientAssignment;
    }

    class Schedule {
      List<Appointment> appointments;
    }

    class PatientAssignment {
      Patient patient;
      MedicalStaff staff;
    }

    class Appointment {
      String date;
      String time;
      Patient patient;
    }

    class Billing {
      Patient patient;
      List<Charge> charges;
      List<Payment> payments;
    }

    class Report {
      String type;
      String content;
    }

    association Department -> Room [*];
    association Department -> MedicalStaff [*];
    association Room -> Device [*];
    association Room -> Patient [*];
    association MedicalStaff -> Schedule [*];
    association MedicalStaff -> PatientAssignment [*];
    association Patient -> MedicalRecord [*];
   
 }