
classdiagram DigitalRetailAssistant {

    class DigitalRetailAssistant {
      String name;
      String uniqueIdentifier;
      Store store;
    }

    class Store {
      String name;
      String uniqueIdentifier;
      Product[] products;
    }

    class Product {
      String name;
      String description;
      double price;
      Category category;
    }

    class Category {
      String name;
      Product[] products;
    }

    class Customer {
      String name;
      String uniqueIdentifier;
      LoyaltyPoints loyaltyPoints;
      DigitalRetailAssistant digitalRetailAssistant;
    }

    class LoyaltyPoints {
      int points;
    }

    association DigitalRetailAssistant 
      hasMember 
        -> Store;

    association Store 
      hasMembers 
        -> Product[*];

    association Product 
      hasMember 
        -> Category;

    association Customer 
      hasMember 
        -> LoyaltyPoints;

    association Customer 
      with 
        -> DigitalRetailAssistant;

    association DigitalRetailAssistant 
      with 
        -> Customer;

    association Store 
      with 
        -> Customer;

    association Product 
      with 
        -> Customer;

    association Category 
      with 
        -> Product;

    composition Store -> DigitalRetailAssistant;
    composition Customer -> DigitalRetailAssistant;
    composition Customer -> Store;
    composition Customer -> Product;
    composition Product -> Category;
}