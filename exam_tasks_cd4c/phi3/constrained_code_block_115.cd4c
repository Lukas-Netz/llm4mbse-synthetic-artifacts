
classdiagram IoTSecuritySystem {

    class IoTSecuritySystem {
      Hub hub;
      CloudBackend cloudBackend;
    }

    class Hub {
      -> Device [*];
      void addDevice(Device device);
      void removeDevice(Device device);
      void monitorDeviceStatus();
      void detectSecurityThreats();
    }

    abstract class Device {
      String uniqueIdentifier;
      DeviceStatus status;
    }

    class Light extends Device {
      int brightnessLevel;
      String color;
    }

    class Thermostat extends Device {
      int temperature;
      ThermostatMode mode;
    }

    class SecurityCamera extends Device {
      String resolution;
      boolean isRecording;
    }

    class CloudBackend {
      void analyzeData();
      void detectThreats();
    }

    enum DeviceStatus {
      On, Off;
    }

    enum ThermostatMode {
      Heating, Cooling;
    }

  composition IoTSecuritySystem -> (has) Hub;
  composition IoTSecuritySystem -> (has) CloudBackend;
  composition Hub -> Device [*];
}