
classdiagram VirtualTourSystem {

    class Property {
      String name;
      String address;
      List<VirtualTour> virtualTours;
    }

    class VirtualTour {
      String name;
      String description;
      List<Scene> scenes;
    }

    class Scene {
      String name;
      String description;
      Model model;
    }

    class Model {
      String type;
    }

    class Room extends Model {
      int length;
      int width;
      int height;
    }

    class Corridor extends Model {
      int length;
      int width;
    }

    class Exterior extends Model {
      double latitude;
      double longitude;
      double altitude;
    }

    class User {
      void createVirtualTour(VirtualTour tour);
      void editVirtualTour(VirtualTour tour, String newName, String newDescription);
      void deleteVirtualTour(VirtualTour tour);
      void upload3DModel(Model model);
      void download3DModel(Model model);
      Property searchByName(String name);
      Property searchByAddress(String address);
      Property searchByDescription(String description);
    }

    composition Property -> (has) VirtualTour;
    composition VirtualTour -> (has) Scene;
    composition Scene -> (has) Model;
    association User -[0..1] VirtualTourSystem
    -> (has) User;
}