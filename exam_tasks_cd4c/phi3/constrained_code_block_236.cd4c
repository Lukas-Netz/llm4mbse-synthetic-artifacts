
classdiagram BusinessIntelligenceSystem {

    class SalesData {
      String productId;
      String storeId;
      int quantitySold;
      DateTime saleTime;
    }

    class Product {
      String productId;
      String name;
      int price;
    }

    class Store {
      String storeId;
      String location;
    }

    class SalesTracker {
      Map<String, List<SalesData>> salesData;
      void addSale(SalesData sale);
      List<SalesData> getSalesData(String productId, String storeId);
      void generateTopSellingProductsReport();
      void generateTopSellingStoresReport();
      void identifyTrends();
      void sendAlert(String productId);
    }

    class InventoryManagement {
      Map<String, Integer> inventoryLevels;
      void updateInventory(String productId, int quantity);
    }

    class CustomerRelationshipManagement {
      Map<String, List<String>> customerData;
      void updateCustomerData(String customerId, String data);
    }

    class BusinessIntelligenceSystem {
      SalesTracker salesTracker;
      InventoryManagement inventoryManagement;
      CustomerRelationshipManagement customerRelationshipManagement;
    }

    composition BusinessIntelligenceSystem -> SalesTracker;
    composition BusinessIntelligenceSystem -> InventoryManagement;
    composition BusinessIntelligenceSystem -> CustomerRelationshipManagement;
}