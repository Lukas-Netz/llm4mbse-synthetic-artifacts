
classdiagram SmartEnergyMeter {

  class SmartMeter {
    String uniqueIdentifier;
    double energyConsumptionKwh;
  }

  class Server {
    -> SmartMeter [*];
    void storeEnergyConsumptionData(SmartMeter meter);
    void provideAnalytics();
  }

  class App {
    -> SmartMeter [*];
    void viewEnergyConsumptionData();
    void setTargets();
    void receiveNotifications();
  }

  class SmartPlug {
    String uniqueIdentifier;
    boolean isOn;
    void turnOn();
    void turnOff();
    void scheduleOnOff(String time);
  }

  class EnergyConsumptionData {
    SmartMeter meter;
    double kwh;
    String timestamp;
  }

  composition SmartEnergyMeter -> SmartMeter;
  composition SmartEnergyMeter -> Server [1];
  composition SmartEnergyMeter -> App [1];
  association SmartPlug -- SmartMeter;
}
