
classdiagram QuantumResistantCrypto {

  class KeyGenerator {
    PublicKey generateKeyPair();
  }

  class KeyDistributor {
    PublicKey publicKey;
    PrivateKey privateKey;
    void distributePublicKey(PublicKey publicKey);
    void revokeKey(PublicKey publicKey);
  }

  class MessageEncryptor {
    PublicKey publicKey;
    String encryptMessage(String message);
  }

  class MessageDecryptor {
    PrivateKey privateKey;
    String decryptMessage(String encryptedMessage);
  }

  class KeyRevocationManager {
    void requestRevocation(PublicKey publicKey);
  }

  class PublicKey {
    String keyId;
    String modulus;
    String exponent;
  }

  class PrivateKey {
    String keyId;
    String modulus;
    String exponent;
    String privateExponent;
  }

  class Message {
    String content;
  }

  composition KeyDistributor <-> KeyGenerator;
  composition KeyDistributor <-> MessageEncryptor;
  composition KeyDistributor <-> KeyRevocationManager;
  association KeyDistributor -> PublicKey [*];
  association KeyDistributor -> PrivateKey [1];
  association MessageEncryptor -> PublicKey;
  association MessageDecryptor -> PrivateKey;
}