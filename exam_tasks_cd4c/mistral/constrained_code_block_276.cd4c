
classdiagram CollaborationTool {

  class Team {
    String name;
    String description;
    TeamLeader leader;
    Project [
     ] projects;
  }

  class Project {
    String name;
    String description;
    List<Task> tasks;
  }

  class Task {
    String name;
    String description;
    Date dueDate;
    List<Member> assignees;
  }

  class Member {
    String username;
    String email;
  }

  class TeamLeader extends Member {
    void assignTask(Task task, Member member);
    void setDeadline(Task task, Date deadline);
  }

  class File {
    String name;
    String content;
  }

  association TeamLeader -- Team;
  association Team -- Project [*];
  association Project -- Task [*];
  association Task -- Member [*];
  association File -- Project;
}