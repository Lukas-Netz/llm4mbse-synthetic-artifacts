
classdiagram PhotographyCoursePlatform {

  class User {
    String uniqueIdentifier;
    UserType userType;
  }

  enum UserType {
    Instructor, Student;
  }

  class Course {
    String uniqueIdentifier;
    String title;
    String description;
    String genre;
    Course [ ] lessons;
  }

  class Lesson {
    String uniqueIdentifier;
    String title;
    String description;
    String topic;
    Lesson [ ] assignments;
  }

  enum Topic {
    CameraSettings, Composition, Editing;
  }

  class Assignment {
    String uniqueIdentifier;
    String title;
    String description;
    AssignmentType assignmentType;
  }

  enum AssignmentType {
    Quiz, Project, Discussion;
  }

  class Instructor extends User {
    Course [ ] courses;
  }

  class Student extends User {
    Course [ ] enrolledCourses;
  }

  composition Course [ * ] coursesInstructor [inverse] <- Instructor;
  composition Course [ * ] coursesStudent [inverse] <- Student;
  composition Course [ * ] lessons [inverse] <- Lesson;
  composition Lesson [ * ] assignments [inverse] <- Assignment;
}