
classdiagram FitnessTrackingDevice {

  class FitnessTrackingDevice {
    String uniqueIdentifier;
    UserAccount userAccount;
  }

  class UserAccount {
    String name;
    String email;
  }

  abstract class Activity {
    int duration;
    double distance;
    int caloriesBurned;
  }

  class Walking extends Activity {}
  class Running extends Activity {}
  class Cycling extends Activity {}
  class Swimming extends Activity {}

  class HeartRate {
    int beatsPerMinute;
  }

  class BloodPressure {
    int systolic;
    int diastolic;
  }

  class SleepQuality {
    int sleepScore;
  }

  class FitnessGoal {
    String goalType;
    double targetValue;
  }

  class SmartphoneApp {
    FitnessTrackingDevice device;
  }

  composition FitnessTrackingDevice -> UserAccount;
  association FitnessTrackingDevice [*]  SmartphoneApp [many]

  -- Otherassociationsandcompositionscanbeaddedasneeded

  <<stereotype>>
  {
    							ordered
   		}
 				;
}