
classdiagram ContentPersonalization {

  class User {
    String uniqueIdentifier;
    Set<String> preferences;
  }

  class Content {
    String title;
    String author;
    String genre;
    String topic;
  }

  class Recommendation {
    User user;
    Content content;
    float score;
  }

  class AIModel {
    void analyzeUserBehavior(User user, Content content);
    void analyzeContentMetadata(Content content);
  }

  class UserContentInteraction {
    User user;
    Content content;
    int rating;
    String review;
  }

  composition UserContentInteraction -> User [1];
  composition UserContentInteraction -> Content [1];

  association User -> Recommendation [*];
  association Content -> Recommendation [*];

  class UserInterface {
    User user;
    void displayRecommendations();
    void updateUserPreferences();
  }

  composition UserInterface -> User [1];
}
