
classdiagram WorkflowManagement {

  class Workflow {
    String id;
    String name;
    Task [][ ] tasks;
  }

  class Task {
    String id;
    String name;
    String description;
    TaskStatus status;
    User [ ] assignees;
    int priority;
    LocalDateTime deadline;
  }

  enum TaskStatus {
    Pending, InProgress, Completed;
  }

  class User {
    String id;
    String name;
    String email;
    Task [ ] assignedTasks;
  }

