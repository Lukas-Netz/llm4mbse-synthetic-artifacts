
classdiagram GardeningAdvice {

  class User {
    String username;
    String password;
  }

  class Question {
    int id;
    String title;
    String description;
    String tags;
    User asker;
  }

  class Answer {
    int id;
    String text;
    int rating;
    Question question;
    Expert expert;
  }

  class Expert {
    int id;
    String name;
    String category;
  }

  association User [*] asks [many] -> Question;
  association Question [1] has [many] -> Answer;
  association Answer [1] belongsTo [many] -> Question;
  association Answer [1] isAnsweredBy [many] -> Expert;
}